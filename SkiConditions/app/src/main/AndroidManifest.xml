<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ift2905.skiconditions" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".SkiConditionApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".DebugActivity"
            android:label="@string/title_activity_debug" >
        </activity>
        <activity
            android:name=".DebugListActivity"
            android:label="@string/title_activity_debug_list" >
        </activity>
        <activity
            android:name=".StationActivity"
            android:label="@string/title_activity_station" >
        </activity>
    </application>

</manifest>
